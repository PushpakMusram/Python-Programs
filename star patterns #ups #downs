#printing star pattern

i=1
print("Please enter a number")
get = int(input())
print("Enter a number\nfor True :1 \nfor False :0")
Bool = int(input())

if Bool==1:
    while i<=get:
        print("*"*i)
        i = i + 1
        continue
elif Bool==0:
    while i<=get:
        print("*"*get)
        get=get - 1
        continue
else:
    print("sorry given wrong input")
