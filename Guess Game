i = 25
OA=5                      #Orignal Attempt
A = OA

while(A>0):
    question = "Enter a number\n" + str(A) +" Attempts remaining\n"
    print(question,end=" ")
    get = int(input())
    if get<25:
        print("Number is lesser than required number")
    elif get>25:
        print("Number is greater than required number")
    else:
        print("Congratulations you won in",((OA-A)+1),"Attempts")
        break
    A = A - 1;
while A==0:
    print("Sorry you lose the game")
    break
        
